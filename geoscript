debug=
while getopts 'd' OPTION; do
    case $OPTION in
    d)    debug=1
    ;;
    esac
done
shift $(($OPTIND -1))

if [ "$debug" ]; then
    class=org.mozilla.javascript.tools.debugger.Main
else
    class=org.mozilla.javascript.tools.shell.Main
fi

# put GeoTools jars on the classpath
cp=''
for x in `ls jars/*.jar`; do
    cp=$cp:`pwd`/$x
done


if [ $# -eq 1 ]; then
    java -cp $cp $class -version 170 -modules lib -main $1
else
    java -cp $cp $class -version 170 -modules lib
fi

